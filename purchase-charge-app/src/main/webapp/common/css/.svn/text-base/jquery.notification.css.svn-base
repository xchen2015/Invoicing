.tau-system-message {
	background-color: #fff;
	position: absolute;
	top: 0;
	left: 50%;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	-ms-transform: translateX(-50%);
	transform: translateX(-50%);
	border-radius: 0 0 4px 4px;
	-webkit-box-shadow: 0 0 13px rgba(0, 0, 0, .65);
	-moz-box-shadow: 0 0 13px rgba(0, 0, 0, .65);
	box-shadow: 0 0 13px rgba(0, 0, 0, .65);
	max-width: 430px;
	min-width: 140px;
	padding: 10px 10px 10px 10px;
	z-index: 10002;
}

.tau-system-message-body {
	display: table
}

.tau-system-message .tau-img,.tau-system-message .tau-txt {
	display: table-cell;
	vertical-align: middle
}

.tau-system-message h3 {
	padding: 0;
	margin: 0;
	font-size: 18px;
	font-weight: 600;
	line-height: 19px
}

.tau-system-message p {
	margin: 0;
	color: #17343a;
	font-size: 13px;
	line-height: 16px;
	padding: 4px 0
}

.tau-system-message a {
	color: #28428b
}

.tau-system-message-success h3 {
	color: #7e9f4a;
	line-height: 25px
}

.tau-system-message-error h3 {
	color: #d55b64;
	line-height: 25px
}

.tau-system-message-warning h3 {
	color: #f09039;
	line-height: 25px
}

.tau-system-message-information h3 {
	line-height: 25px;
	color: #606c7b
}

.tau-system-message-information a {
	font-size: 12px;
	color: #5D84BC
}

.tau-system-message-button {
	height: 41px;
	vertical-align: top;
	margin-left: 10px;
}

.tau-system-message .tau-entity-name {
	display: inline-block;
	max-width: 250px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	vertical-align: bottom
}

.tau-system-message .tau-img {
	display: block;
	margin-right: 15px;
	position: relative
}

.tau-system-message-success .tau-img {
	width: 26px;
	height: 41px;
	background: url("../images/jquery_notification/success.png") no-repeat;
}

.tau-system-message-error .tau-img {
	width: 28px;
	height: 43px;
	background: url("../images/jquery_notification/error.png") no-repeat;
	top: 4px
}

.tau-system-message-warning .tau-img {
	width: 26px;
	height: 32px;
	background: url("../images/jquery_notification/warning.png") no-repeat
}

.tau-system-message-information .tau-img {
	width: 25px;
	height: 32px;
	background: url("../images/jquery_notification/info.png") no-repeat
}
.tau-btn 
{
	width: 11px;
	height: 11px;
	background: url("../images/jquery_notification/close.png") no-repeat;
	cursor: pointer;
}
